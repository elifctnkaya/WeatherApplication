<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

                <TextView
                    android:id="@+id/haftalikGunIsmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Gün İsmi"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/rain_drop"/>

                        <TextView
                            android:id="@+id/haftalikHavaDurumu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Hava Durumu"
                            android:layout_marginLeft="3dp"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/haftalikGorsel"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/back2"
                            />
                </LinearLayout>


                <TextView
                    android:id="@+id/haftalikDerece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="derece"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" />

        </RelativeLayout>
</RelativeLayout>